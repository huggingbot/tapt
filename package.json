{
  "name": "tapt-telegram-bot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --config nodemon.json src/index.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "prepare": "husky",
    "migrate": "ts-node -r tsconfig-paths/register src/database/migrator.ts",
    "gen:db-types": "npx kysely-codegen --camel-case --dialect=postgres --out-file=./src/database/gen-types.ts --url=postgres://pguser:pgpass@localhost:5432/tapt"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.5",
    "@types/pg": "^8.11.5",
    "@types/uuid4": "^2.0.3",
    "compression": "^1.7.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "kysely-codegen": "^0.14.2",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.5.0"
  },
  "dependencies": {
    "@telegraf/session": "^2.0.0-beta.7",
    "@uniswap/sdk-core": "^3.2.3",
    "@uniswap/smart-order-router": "^3.26.1",
    "@uniswap/v3-sdk": "^3.11.0",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "kysely": "^0.27.3",
    "lodash": "^4.17.21",
    "loglevel": "^1.9.1",
    "loglevel-plugin-prefix": "^0.8.4",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "redis": "^4.6.13",
    "telegraf": "^4.16.3",
    "uuid4": "^2.0.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.x",
    "npm": ">=9.x"
  }
}
